//对比图表
.chart-container {
  margin 0 auto
  //padding-left: 20px
  width 690px
  position relative

  .t-tip3 {
    position absolute
    left -80px
    top: calc(50% - 110px)
    font-size: 18px
    line-height: 24px
    font-weight: 700
    background-color: #121943
    border-top: 6px solid #161f57
    padding 10px 30px
    width 24px
    box-sizing content-box
    color #00ccff
  }

  .t-tip4 {
    color #00ccff
    font-size: 20px
    font-weight: 700
    position absolute
    bottom -20px
    width 400px
    left calc(50% - 185px)

    .tt-inner {
      text-align center
      background-color: #121943
      width 150px
      height: 40px
      line-height: 40px
    }
  }

  .innerTips {

    .t-tip1 {
      position absolute
      left -80px
      top: calc(50% - 110px)
      font-size: 18px
      line-height: 24px
      font-weight: 700
      background-color: #121943
      border-top: 6px solid #161f57
      padding 10px 30px
      width 24px
      box-sizing content-box
      color #00ccff
    }

    .t-tip2 {
      color #00ccff
      font-size: 20px
      font-weight: 700
      position absolute
      bottom -20px
      width 400px
      left calc(50% - 200px)

      .tt-inner {
        text-align center
        background-color: #121943
        width 150px
        height: 40px
        line-height: 40px
      }
    }

    .left1 {
      left: -12px
      width: 300px
      -webkit-border-radius: 20px
      -moz-border-radius: 20px
      border-radius: 20px
      overflow hidden
      bottom: -30px;
    }

    .left2 {
      left 450px
      width: 300px
      -webkit-border-radius: 20px
      -moz-border-radius: 20px
      border-radius: 20px
      overflow hidden
      bottom: -30px;
    }
  }

  #barChart2 {
    width: 310px;
    height: 350px;
  }

  #barChart3 {
    width: 260px;
    height: 350px;
  }

  #barChart4 {
    width: 280px;
    height: 350px;
  }

  #barChart5 {
    width: 295px;
    height: 350px;
    margin-left: -68px
  }

  #barChart6 {
    width: 280px;
    height: 680px;
  }

  #barChart7 {
    width: 295px;
    height: 680px;
    margin-left: -10px
  }

  .chart-tip {
    height: 346px
    width 100px
    padding 58px 10px 24px
    display flex
    flex-flow: column;

    .ci-item {
      background-color: #0e132d
      padding-top 6px
      flex 1
      text-align center
      font-size: 16px
      color #8fa0cd
      border-right: 1px solid #303857
      border-left: 1px solid #303857
      position relative


      &::after {
        bottom: 0
        content ''
        width 80%
        left 50%
        transform translateX(-50%)
        background-color: #303857
        height: 1px
        display block
        position absolute
      }

      &:last-child {
        &::after {
          height: 0
        }
      }
    }
  }
}



