                width 500px
        .block3-2
          height: 415px
          .block3-9
            .top
              padding: 15px 0;
              background-color: #0f1432;
              span
                color: #fff;
                text-align: center;

            .base-core
              position: absolute;
              top: 272px;
              left: 0;
              color: #fff;
              padding: 2px;
              font-size: 14px;

            .base-core-line
              position: absolute;
              top: 276px;
              left: 45px;
              width: 45px;
              font-size: 12px;
              text-align: right;
              padding-right: 15px;
              &:after
                content: ''
                position: absolute;
                right: 0;
                bottom: 6px;
                width: 8px;
                height: 1px;
                background-color: #3d5075;


            .block-level
              ul
                border: 1px solid #3d5075;
                width: 60%;
                margin: 0 auto;
                li
                  display: flex;
                  height: 44px;
                  line-height: 44px;
                  box-sizing: border-box;
                  border-bottom: 1px solid #303a60;
                  &:last-child
                    border-bottom: none;

                  > div
                    text-align: center;
                    height: 100%;
                    flex: 1;
                    &:first-child
                      width: 70px;
                      flex: 0 0 70px;
                      background-color: #0e132d;
                      color: #7e83bd;
                      border-right: 1px solid #303a60;

                    &:last-child
                      padding-top: 8px;
                      background-color rgba(0, 0, 0, 0.2);
                      .bin-rate .bin-rate__icon
                        font-size: 24px;
                        margin-right: 4px;
          .specialBot
            -ms-background-position-x: 54px
            background-position-x: 54px
            height: 383px
            width: 410px
            padding-right 40px
            -webkit-background-size: 80% 30%
            background-size: 83% 20%
          .specialBot2
            -ms-background-position-x: 24px
            background-position-x: 24px
            height: 383px
            width: 410px
            padding-right 40px
            -webkit-background-size: 80% 30%
            background-size: 83% 20%
          .block3-2-1
            width: 582px
            .block-title
              position relative
              width 100%
              text-align center
              line-height: 60px
              height: 60px
              .select-tip
                position absolute
                right 0
                top: 10px
                -webkit-border-radius: 20px
                -moz-border-radius: 20px
                border-radius: 20px
                background-color: #0d1335
                color #2967b8
                height: 40px
                padding 0 20px
                line-height: 40px
                cursor pointer
                font-size:18px
            .bin-table-wrapper
              .bin-table
                line-height: 56px
                .bin-table-header
                  td,th
                    color #4c587a
                .bin-table-tbody
                  td,th
                    &:nth-child(1)
                      color #4c587a

          .block3-2-3
            width 388px
            box-sizing border-box
            padding 0 20px
.double-select
  overflow hidden
  width: 582px
  height: 496px
  .btns
    background-color: #151a40;
    padding-left 12px

  .btn
    position: relative;
    width: 185px;
    height: 40px;
    margin-right: 5px;
    margin-bottom: 5px;
    color: #fff;
    overflow: hidden;
    line-height: 40px;
    cursor: pointer;
    padding-right: 5px;

  .click-btn
    display: inline-block;
    width: 100%;
    height: 100%;
    text-align: center;
    transition: background-color ease-in-out .5s;
    background-color: #222d4b;

  .active .click-btn
    background-color: #0e35ab;

  .active .cancel
    right: 0;

  .cancel
    position: absolute;
    color: #a1aee6;
    -webkit-border-radius: 15px 0 0 15px;
    -moz-border-radius: 15px 0 0 15px;
    border-radius: 15px 0 0 15px;
    background-color: #3159d1;
    display: inline-block;
    right: -50px;
    top: 0;
    width: 50px;
    text-align: center;
    transition: right ease-in-out .5s;
    margin: 5px 0;
    line-height: 30px;
    font-size: 14px;
    font-weight: 700;
    text-indent: .4em;


tr.bin-table-row-hover
  td
    background-color: $bgHighLight


//表格右侧箭头
tr.bin-table-row-hover::after,
.bin-table .bin-table-row-highlight::after
  position absolute
  right -25px
  margin-top 13px
  content ''
  display inline-block
  height: 20px
  width: 20px
  background-size: contain;
  background-image: url(../images/tip001.png)
  background-repeat: no-repeat


//点击后高亮右侧箭头
tr.bin-table-row-highlight.bin-table-row-hover td,
.bin-table-row-hover td,
.bin-table .bin-table-row-highlight td
  background-color: $bgHighLight


