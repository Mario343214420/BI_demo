      .block2
        width: 100%
        .over-hidden
          overflow hidden
          #rcMapChart
            transform: scale(1.2) translate(-50px, 4px);

        .block2-2
          display block
        .block2-2
          //width 388px
          box-sizing border-box
          //padding 0 20px
      .block3
        height: 830px
        .block-title
          position relative
          width 100%
          text-align center
          line-height: 60px
          height: 60px
          .select-tip
            position absolute
            right 0
            top: 10px
            -webkit-border-radius: 20px
            -moz-border-radius: 20px
            border-radius: 20px
            background-color: #0d1335
            color #2967b8
            height: 40px
            padding 0 20px
            line-height: 40px
            cursor pointer
            font-size:18px
          .t-content
            font-weight: 700
            color #fff
            font-size: 20px

        .block3-1
          height: 415px
          .table3
            position: relative;
            width: 582px
            .inner
              height: 355px
              .s-table
                flex 2
                overflow visible
                display inline-block
                //width: 455px;
                vertical-align top
                .bin-table
